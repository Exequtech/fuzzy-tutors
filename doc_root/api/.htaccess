RedirectMatch 403 (composer.json|composer.lock|/vendor/)

RewriteCond $1 ^schema
RewriteRule ^(.*)$ - [L]

RewriteCond %{DOCUMENT_ROOT}/api/schema/$1 !-d
RewriteRule ^(.*)$ - [R=404,L]

RewriteCond %{DOCUMENT_ROOT}/api/schema/$1/%{REQUEST_METHOD}.json !-f
RewriteRule ^(.*)$ - [R=405,L]

RewriteRule ^(.*)$ index.php?path=$1 [END,QSA]