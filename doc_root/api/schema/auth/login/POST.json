{
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "minLength": 2,
            "maxLength": 15,
            "pattern": "[\\w-]+"
        },
        "email": {
            "type": "string",
            "maxLength": 40,
            "pattern": "^(?=[^\\.]+(\\.[^\\.]+)*@[^\\.]+(\\.[^\\.]+)+)[\\w\\.]+@[\\w\\.]+$"
        },
        "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 50,
            "pattern": "^(?=.*[A-Z]+)(?=.*[a-z])(?=.*[\\d])(?=.*[^\\w\\s])[\\x00-\\x7F]+$"
        }
    },
    "oneOf": [
        {
            "required": ["email"]
        },
        {
            "required": ["username"]
        }
    ],
    "required": ["password"],
    "additionalProperties" : false
}