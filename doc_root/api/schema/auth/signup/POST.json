{
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "minLength": 2,
            "maxLength": 15,
            "pattern": "[\\w-]+"
        },
        "email": {
            "type": "string",
            "maxLength": 40,
            "pattern": "^(?=[^\\.]+(\\.[^\\.]+)?@[^\\.]+(\\.[^\\.]+)+)[\\w\\.]+@[\\w\\.]+$"
        },
        "userType": {
            "type": "string",
            "enum": ["student", "owner", "tutor"]
        },
        "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 50,
            "pattern": "^(?=.*[A-Z]+)(?=.*[a-z])(?=.*[\\d])(?=.*[^\\w\\s])[\\x00-\\x7F]+$"
        }
    },
    "required": ["username", "email", "userType", "password"],
    "additionalProperties": false
}