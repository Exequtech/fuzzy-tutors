{
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "minLength": 2,
            "maxLength": 15,
            "pattern": "^[\\w-]+$"
        },
        "email": {
            "type": "string",
            "maxLength": 40,
            "pattern": "^(?=[^\\.]+(\\.[^\\.]+)*@[^\\.]+(\\.[^\\.]+)+)[\\w\\.]+@[\\w\\.]+$"
        },
        "authorized": {
            "type": "boolean"
        }
    },
    "additionalProperties": false
}