{
    "type": "object",
    "properties": {
        "locationId": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "null"
                }
            ]
        },
        "subjectId": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "null"
                }
            ]
        },
        "startDate": {
            "type": "string",
            "pattern": "^(\\d{4})-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]) ([01]\\d|2[0-3]):([0-5][0-9]):([0-5][0-9])$"
        },
        "endDate": {
            "type": "string",
            "pattern": "^(\\d{4})-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]) ([01]\\d|2[0-3]):([0-5][0-9]):([0-5][0-9])$"
        },
        "notes": {
            "oneOf": [
                {
                    "type": "string",
                    "maxLength": 1024
                },
                {
                    "type": "null"
                }
            ]
        },
        "students": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 1
            },
            "uniqueItems": true
        },
        "studentOverrides": {
            "type": "object",
            "propertyNames": {
                "pattern": "^[\\d]+$"
            },
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "attended": {
                        "type": "boolean"
                    },
                    "trackables": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "boolean"
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "trackables": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "[^/]+",
                "minLength": 3,
                "maxLength": 30
            },
            "uniqueItems": true
        },
        "topics": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 1
            },
            "uniqueItems": true
        }
    },
    "additionalProperties": false
}