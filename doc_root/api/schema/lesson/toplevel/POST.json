{
    "type": "object",
    "properties": {
        "locationId": {
            "type": "integer",
            "minimum": 1
        },
        "subjectId": {
            "type": "integer",
            "minimum": 1
        },
        "startDate": {
            "type": "string",
            "pattern": "^(\\d{4})-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]) ([01]\\d|2[0-3]):([0-5][0-9]):([0-5][0-9])$"
        },
        "endDate": {
            "type": "string",
            "pattern": "^(\\d{4})-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01]) ([01]\\d|2[0-3]):([0-5][0-9]):([0-5][0-9])$"
        },
        "notes": {
            "type": "string",
            "maxLength": 1024
        },
        "students": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 1
            },
            "uniqueItems": true
        },
        "classId": {
            "type": "integer",
            "minimum": 1
        },
        "trackables": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "[^/]+",
                "minLength": 3,
                "maxLength": 30
            },
            "uniqueItems": true
        },
        "topics": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 1
            },
            "uniqueItems": true
        }
    },
    "required": ["subjectId", "startDate", "endDate", "trackables", "topics"],
    "oneOf": [
        {
            "required": ["students"]
        },
        {
            "required": ["classId"]
        }
    ],
    "additionalProperties": false
}