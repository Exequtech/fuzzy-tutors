{
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 60,
            "pattern": "^[\\w-\\s]+$"
        },
        "email": {
            "type": "string",
            "maxLength": 40,
            "pattern": "^(?=[^\\.]+(\\.[^\\.]+)?@[^\\.]+(\\.[^\\.]+)+)[\\w\\.]+@[\\w\\.]+$"
        }
    },
    "additionalProperties": false
}
